Ext.onReady(function(){
	Ext.tip.QuickTips.init();

	Ext.create('Ext.window.Window', {
		title: 'Login window',
		width: 350, autoHeight: true,
		closable: false, resizable: false, bodyStyle: 'background-color:#DFE8F6; padding: 5px;',
		items: Ext.create('Ext.form.FormPanel', {
			api: { submit: Login.some1 },
			border: false, bodyStyle: 'background-color:#DFE8F6;', // frame: true,
			buttons: [{
				text: 'Login',
				handler: function(){
					var form = this.up().up().getForm();
					form.submit({
						success: function(form, action){
							window.location = '/';
						}
					});
				}
			}],
			defaultType: 'textfield',
			defaults: { anchor: '100%', allowBlank: false, msgTarget: 'side' },
			items: [{
				name: 'username', fieldLabel: 'User', value: 'sample-user'
			},{
				name: 'password', fieldLabel: 'Password', inputType: 'password', value: 'sample-password'
			}]
		})
	}).show();

});
